<SensorML xmlns:sml="http://www.opengis.net/sensorML/1.0.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns:swe="http://www.opengis.net/swe/1.0.1"
          xmlns:gml="http://www.opengis.net/gml"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xsi:schemaLocation="http://www.opengis.net/sensorML/1.0.1 http://schemas.opengis.net/sensorML/1.0.1/sensorML.xsd"
          version="1.0.1">
  <member xlink:arcrole="urn:ogc:def:process:OGC:detector"><SensorDescription>

<System>
            <gml:description>an anemometer for measuring wind driection and speed using a trditional vane and cup approach</gml:description>
            <gml:name>Davis_Anemometer</gml:name>
            <!-- metadata  -->
            <keywords>
                <KeywordList codeSpace="urn:x-nasa:def:gcmd:keywords">

                    <keyword>weather</keyword>
                    <keyword>insitu</keyword>
                    <keyword>anemometer</keyword>
                </KeywordList>
            </keywords>
            <identification>
                <IdentifierList>

                    <identifier name="longName">
                        <Term definition="urn:ogc:def:property:OGC:longName">
                            <value>Davis Anemometer</value>
                        </Term>
                    </identifier>
                    <identifier name="modelNumber">
                        <Term definition="urn:ogc:def:property:OGC:modelNumber">
                            <value>7911</value>

                        </Term>
                    </identifier>
                    <identifier name="manufacturer">
                        <Term definition="urn:ogc:def:property:OGC:manufacturer">
                            <value>Davis Instruments</value>
                        </Term>
                    </identifier>
                </IdentifierList>

            </identification>
            <classification>
                <ClassifierList>
                    <classifier name="Intended Application1">
                        <Term definition="urn:ogc:def:classifier:OGC:application">
                            <value>weather</value>
                        </Term>
                    </classifier>

                    <classifier name="Intended Application2">
                        <Term definition="urn:ogc:def:classifier:OGC:application">
                            <value>wind speed</value>
                        </Term>
                    </classifier>
                    <classifier name="Intended Application2">
                        <Term definition="urn:ogc:def:classifier:OGC:application">
                            <value>wind direction</value>

                        </Term>
                    </classifier>
                    <classifier name="Sensor Type">
                        <Term definition="urn:sensor:classifier:sensorType">
                            <codeSpace xlink:href="urn:x-ceos:def:GCMD:sensors"/>
                            <value>anemometer</value>
                        </Term>
                    </classifier>

                </ClassifierList>
            </classification>
            <!-- REFERENCE FRAME -->
            <spatialReferenceFrame>
                <gml:EngineeringCRS gml:id="ANEMOMETER_FRAME">
                    <gml:srsName>Anemometer Spatial Frame</gml:srsName>
                    <gml:usesCS xlink:href="urn:ogc:def:cs:xyzFrame"/>
                    <gml:usesEngineeringDatum>

                        <gml:EngineeringDatum gml:id="ANEMOMETER_DATUM">
                            <gml:datumName>Anemometer Spatial Datum</gml:datumName>
                            <gml:anchorPoint>Origin is at the base of the rotating part. Z is
                                along the axis around which measurement is made. X is the
                                reference (0) direction that should point north when installed
                                correctly. Y is orthogonal to X and Z.</gml:anchorPoint>
                        </gml:EngineeringDatum>
                    </gml:usesEngineeringDatum>
                </gml:EngineeringCRS>
            </spatialReferenceFrame>
            <components>

                <ComponentList>
                    <!--=====================-->
                    <!-- Wind Speed Detector -->
                    <!--=====================-->
                    <component name="anemometer">
                        <Component gml:id="DAVIS_ANEMOMETER_SPEED">
                            <identification>
                                <IdentifierList>
                                    <identifier name="longName">

                                        <Term definition="urn:ogc:def:property:OGC:longName">
                                            <value>Davis Wind Speed Detector</value>
                                        </Term>
                                    </identifier>
                                </IdentifierList>
                            </identification>
                            <!-- INPUTS -->
                            <inputs>

                                <InputList>
                                    <input name="windSpeed">
                                        <swe:ObservableProperty definition="urn:ogc:def:property:OGC:windSpeed"/>
                                    </input>
                                </InputList>
                            </inputs>
                            <!-- OUTPUTS -->
                            <outputs>
                                <OutputList>

                                    <output name="measuredWindSpeed">
                                        <swe:Quantity definition="urn:ogc:def:property:OGC:windSpeed">
                                            <swe:uom code="m/s"/>
                                        </swe:Quantity>
                                    </output>
                                </OutputList>
                            </outputs>
                            <!-- PARAMETERS -->
                            <parameters>

                                <ParameterList>
                                    <parameter name="calibration">
                                        <swe:ConditionalValue definition="urn:ogc:def:property:OGC:steadystateResponse" fixed="true">
                                            <swe:condition name="calibrationTime">
                                                <swe:Time definition="urn:ogc:def:property:OGC:observationTime">
                                                    <swe:uom xlink:href="urn:ogc:def:unit:OGC:ISO8601"/>
                                                    <swe:value>2004-01-01T04:30:00</swe:value>
                                                </swe:Time>

                                            </swe:condition>
                                            <swe:data>
                                                <swe:NormalizedCurve>
                                                    <swe:function>
                                                        <swe:Curve>
                                                            <swe:elementCount>
                                                                <swe:Count>
                                                                    <swe:value>2</swe:value>

                                                                </swe:Count>
                                                            </swe:elementCount>
                                                            <swe:elementType>
                                                                <swe:SimpleDataRecord>
                                                                    <swe:field name="windSpeed">
                                                                        <swe:Quantity definition="urn:ogc:def:property:OGC:windSpeed">
                                                                            <swe:uom code="m/s"/>
                                                                        </swe:Quantity>
                                                                    </swe:field>

                                                                    <swe:field name="measuredWindSpeed">
                                                                        <swe:Quantity definition="urn:ogc:def:property:OGC:windSpeed">
                                                                            <swe:uom code="m/s"/>
                                                                        </swe:Quantity>
                                                                    </swe:field>
                                                                </swe:SimpleDataRecord>
                                                            </swe:elementType>
                                                            <swe:encoding>
                                                                <swe:TextBlock blockSeparator="," decimalSeparator="." tokenSeparator=" "/>

                                                            </swe:encoding>
                                                            <swe:values>0.9,0.9 78,78</swe:values>
                                                        </swe:Curve>
                                                    </swe:function>
                                                </swe:NormalizedCurve>
                                            </swe:data>
                                        </swe:ConditionalValue>
                                    </parameter>

                                </ParameterList>
                            </parameters>
                            <!-- METHOD -->
                            <method xlink:href="urn:ogc:def:process:1.0:detector"/>
                        </Component>
                    </component>
                    <!--=========================-->
                    <!-- Wind Direction Detector -->
                    <!--=========================-->

                    <component name="windDirectionDetector">
                        <Component gml:id="DAVIS_WIND_DIRECTION">
                            <!-- INPUTS -->
                            <inputs>
                                <InputList>
                                    <input name="windDirection">
                                        <swe:ObservableProperty definition="urn:ogc:def:property:OGC:windDirection"/>
                                    </input>
                                </InputList>

                            </inputs>
                            <!-- OUTPUTS -->
                            <outputs>
                                <OutputList>
                                    <output name="measuredWindDirection">
                                        <swe:Quantity definition="urn:ogc:def:property:OGC:windDirection">
                                            <swe:uom code="deg"/>
                                        </swe:Quantity>
                                    </output>

                                </OutputList>
                            </outputs>
                            <!-- PARAMETERS -->
                            <parameters>
                                <ParameterList>
                                    <parameter name="calibration">
                                        <swe:ConditionalValue definition="urn:ogc:def:property:OGC:steadystateResponse" fixed="true">
                                            <swe:condition name="calibrationTime">
                                                <swe:Time definition="urn:ogc:def:property:OGC:observationTime">

                                                    <swe:uom xlink:href="urn:ogc:def:unit:OGC:ISO8601"/>
                                                    <swe:value>2004-01-01T04:30:00</swe:value>
                                                </swe:Time>
                                            </swe:condition>
                                            <swe:data>
                                                <swe:NormalizedCurve>
                                                    <swe:function>
                                                        <swe:Curve>

                                                            <swe:elementCount>
                                                                <swe:Count>
                                                                    <swe:value>2</swe:value>
                                                                </swe:Count>
                                                            </swe:elementCount>
                                                            <swe:elementType>
                                                                <swe:SimpleDataRecord>
                                                                    <swe:field name="windDirection">

                                                                        <swe:Quantity definition="urn:ogc:property:OGC:windDirection">
                                                                            <swe:uom code="deg"/>
                                                                        </swe:Quantity>
                                                                    </swe:field>
                                                                    <swe:field name="measuredWindDirection">
                                                                        <swe:Quantity definition="urn:ogc:property:OGC:windDirection">
                                                                            <swe:uom code="deg"/>
                                                                        </swe:Quantity>
                                                                    </swe:field>

                                                                </swe:SimpleDataRecord>
                                                            </swe:elementType>
                                                            <swe:encoding>
                                                                <swe:TextBlock blockSeparator="," decimalSeparator="." tokenSeparator=" "/>
                                                            </swe:encoding>
                                                            <swe:values>0.0,0.0 360.0,360.0</swe:values>
                                                        </swe:Curve>
                                                    </swe:function>

                                                </swe:NormalizedCurve>
                                            </swe:data>
                                        </swe:ConditionalValue>
                                    </parameter>
                                </ParameterList>
                            </parameters>
                            <!-- METHOD -->
                            <method xlink:href="urn:ogc:def:process:1.0:detector"/>
                        </Component>

                    </component>
                </ComponentList>
            </components>            
        </System>
</SensorDescription>  </member>
</SensorML>